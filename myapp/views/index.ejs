<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <% if (!login) { %>

      <form action="/users" method="post">
        <label for="fname">First name:</label>
        <input type="text" id="fname" name="fname"><br><br>
        <label for="lname">Last name:</label>
        <input type="text" id="lname" name="lname"><br><br>
        <input type="submit" value="Submit">
      </form>

    <% } else { %>

      <% if (upload) { %>
      <br/>
      <br/>

      <form action="/file/multiupload" enctype="multipart/form-data" method="post">
        <div class="form-group">
          <b>Converting your CSV here (multiple):</b>
          <input type="file" class="form-control-file" name="uploaded_file" multiple/>
          <input type="submit" style="border-radius: 4px;" value="Upload" class="btn btn-primary">
        </div>
      </form>
      <br/>

      <% } %>
      <% if (download) { %>

        <% locals.filenames.forEach(function (file) { %>
          <p> <%= file %> </p>
        <% }) %>

      <form action="/file/download" method="post">
          <label for="filename">Download - <%= locals.filename %>:</label><br>
          <input type="text" id="filename" name="filename" value='<%= locals.filename %>'>
          <br>
          <input type="submit" value="Download">
      </form>
      
      <% } %>

    <% } %>
  
  </body>
</html>

